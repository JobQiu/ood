package jkl1.client.model.task;

import java.rmi.Remote;
import java.rmi.RemoteException;

/**
 * Adapter used by a ChatWindow to send outgoing messages to another ChatWindow.
 * @author luej
 *
 */
public interface ChatWindowAdapter extends Remote {
	/**
	 * Send an outgoing message.
	 * @param msg	Message to send.
	 */
	void send(String msg) throws RemoteException;
}
