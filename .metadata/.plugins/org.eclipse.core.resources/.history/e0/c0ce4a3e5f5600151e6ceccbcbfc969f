package model.ball;

import java.awt.Color;
import java.awt.Component;
import java.awt.Point;

public class CurveBall extends ABall {
    
    private double delta = 2 * Math.PI / 360;
    
    private double radian = 0;

    public CurveBall(Point startLoc, int startRadius, Point startVel, Color color, Component canvas) {
        super(startLoc, startRadius, startVel, color, canvas);
    }

    @Override
    protected void updateUniqueProperty() {
        radian += delta;
        if (radian >= 2 * Math.PI) {
            radian = 0;
        }
        
        velocity.x = (int)Math.round((Math.cos(radian) * velocity.x - Math.sin(radian) * velocity.y));
        velocity.y = (int)Math.round(Math.cos(radian) * velocity.x + Math.sin(radian) * velocity.y);
    }
}
