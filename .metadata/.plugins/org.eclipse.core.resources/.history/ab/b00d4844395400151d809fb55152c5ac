package model;

import java.awt.Component;

/**
 * The model to view adapter interface
 * @author ls53@rice.edu
 */
public interface IViewAdapter {
    
    public Component getCanvas();
    
    public void repaint();
    
    public static final IViewAdapter NULL_OBJECT = new IViewAdapter() {
        
        @Override
        public Component getCanvas() {
            return null;
        }
        
        @Override
        public void repaint() {}
    };
}
