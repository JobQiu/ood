package model.ball;

import java.awt.Color;
import java.awt.Component;
import java.awt.Graphics;
import java.awt.Point;

public class ColorChangingBall extends ABall {

    public ColorChangingBall(Point startLoc, int startRadius, Point startVel, Color color, Component canvas) {
        super(startLoc, startRadius, startVel, color, canvas);
    }

    @Override
    protected void move() {
        location.x += velocity.x;
        location.y += velocity.y;
    }

    @Override
    protected void bounce() {
        if (location.x - radius < 0) {
            velocity.x = -velocity.x;
        }
        
        if (location.y - radius < 0) {
            velocity.y = -velocity.y;
        }
        
        if (location.x + radius > canvas.getWidth()) {
            velocity.x = -velocity.x;
            location.x -= 2 * (location.x - (canvas.getWidth() - radius));
        }
        
        if (location.y + radius > canvas.getHeight()) {
            velocity.y = -velocity.y;
        }
    }

    @Override
    protected void paint(Graphics g) {
        g.setColor(color);
        int diameter = radius * 2;
        g.fillOval(location.x - radius, location.y - radius, diameter, diameter);
    }

}
