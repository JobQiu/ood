package model.ball;

import java.awt.Color;
import java.awt.Component;
import java.awt.Graphics;
import java.awt.Point;

import util.Randomizer;

public class WanderBall extends ABall {

    public WanderBall(Point startLoc, int startRadius, Point startVel, Color color, Component canvas) {
        super(startLoc, startRadius, startVel, color, canvas);
        // TODO Auto-generated constructor stub
    }

    @Override
    protected void move() {
        location.x += velocity.x + Randomizer.Singleton.randomInt(0, 5);
        location.y += velocity.y + Randomizer.Singleton.randomInt(0, 5);
    }

    @Override
    protected void paint(Graphics g) {
        g.setColor(color);
        int diameter = radius * 2;
        g.fillOval(location.x - radius, location.y - radius, diameter, diameter);
    }

}
